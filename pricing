    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- AOS Animation Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100
        });

        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            navbar.classList.toggle('scrolled', window.scrollY > 50);
        });

        // Class selection functionality
        const classTypeSelect = document.getElementById('classType');
        const showPricingBtn = document.getElementById('showPricingBtn');
        const changeSelectionBtn = document.getElementById('changeSelectionBtn');

        // Get all card categories
        const allCardCategories = document.querySelectorAll('.card-category');
        
        // Initially show only the first category
        allCardCategories.forEach((category, index) => {
            if (index !== 0) {
                category.style.display = 'none';
            }
        });

        // Enable button when selection is made
        classTypeSelect.addEventListener('change', function() {
            showPricingBtn.disabled = !this.value;
        });

        // Show selected pricing category
        showPricingBtn.addEventListener('click', function() {
            if (!classTypeSelect.value) return;
            
            const selectedValue = classTypeSelect.value;
            
            // Hide all categories first
            allCardCategories.forEach(category => {
                category.style.display = 'none';
            });
            
            // Show selected category or all
            if (selectedValue === 'all') {
                allCardCategories.forEach(category => {
                    category.style.display = 'block';
                });
            } else {
                const selectedCategory = document.getElementById(`${selectedValue}-cards`);
                if (selectedCategory) {
                    selectedCategory.style.display = 'block';
                }
            }
            
            // Scroll to pricing section
            document.getElementById('pricing').scrollIntoView({ behavior: 'smooth' });
            
            // Refresh AOS animations for newly visible content
            setTimeout(() => {
                AOS.refresh();
            }, 300);
        });

        // Change selection button
        changeSelectionBtn.addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('selection').scrollIntoView({ behavior: 'smooth' });
        });
    </script>
</body>
</html>
